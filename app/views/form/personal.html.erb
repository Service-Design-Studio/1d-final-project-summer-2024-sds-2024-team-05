<div class="row">
    <div class="col text-center">
    <h4><b>Personal Information</b></h4>
    </div>
</div>  

<div class = "container">
    <div class="row d-flex justify-content-left">
        <div class="col-sm-2">
        <form>
            <label for="first_name"><u>Patient's First Name</u></label><br>
            <input type="text" id="first_name" name="first_name" placeholder="John" style="width: 100%; text-align: left"><br><br>
        </form>
        </div>
        <div class="col-sm-2">
        <form>
            <label for="last_name"><u>Patient's Last Name</u></label><br>
            <input type="text" id="last_name" name="last_name" placeholder="Tan" style="width: 100%; text-align: left">
        </form>
        </div>
    </div>

    <div class="row d-flex justify-content-left mt-1">
    <div class="col-sm-2">
        <form>
        <p><u>Gender</u></p>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="male" name="gender" value="Male">
                <label class="form-check-label" for="male">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="female" name="gender" value="Female">
                <label class="form-check-label" for="female">Female</label>
            </div>
        </form>
    </div>
    </div>

    <div class="row d-flex justify-content-center mt-4">
        <form>
            <label for="dateofbirth"><u>Date of birth</u></label>
            <input id="dateofbirth" class="form-control" type="date" style="width: 200px;"/>
        </form>
    </div>

    <div class="row d-flex justify-content-left mt-4">
        <form>
            <label for="address"><u>Address</u></label>
            <input type="text" id="address" name="address" style="width: 100%; text-align: left">
        </form>
    </div>

    <div class="row d-flex justify-content-left mt-4">
    <div class="col-sm-12">
        <form>
        <fieldset>
            <p><u>Relationship to Account Holder</u></p>
            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="family" name="relationship" value="Direct Family member">
            <label class="form-check-label" for="family">Direct Family member</label>
            </div>
            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="relative" name="relationship" value="Relative">
            <label class="form-check-label" for="relative">Relative</label>
            </div>
            <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" id="employer" name="relationship" value="Employer - Domestic Helper">
            <label class="form-check-label" for="employer">Employer - Domestic Helper</label>
            </div>
            <div class="form-group form-check form-check-inline">
            <input class="form-check-input" type="radio" id="others" name="relationship" value="Others">
            <label class="form-check-label" for="others">Others:</label>
            <input type="text" id="others" name="others" placeholder="Please Fill" style="font-style:italic">
            </div>
        </fieldset>
        </form>
    </div>
    </div>

    <div class="row d-flex justify-content-left mt-4">
        <form>
            <label for="hobbies"><u>Hobbies and Pastime</u></label><br>
            <input type="text" id="hobbies" name="hobbies" style="width: 50%; height: 100px; text-align: left;">
        </form>
    </div>
</div>
