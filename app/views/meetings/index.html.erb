<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Forms</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>" async defer></script>
  <style>
    th {
      cursor: pointer;
    }
  </style>
</head>
<body>
  <p style="color: green"><%= notice %></p>
  <div class="container">
  

    <h1>Meetings</h1>

    <%= month_calendar(events: @meetings) do |date, meetings| %>
      <div class="day">
        <%= date.day %>
      </div>
        <% meetings.each do |meeting| %>
            <div style="width: 150px; padding: 8px; padding-top: 2px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; text-align: center;" >
              <%= link_to "#{meeting.title} #{meeting.condensed_time}", meeting_path(meeting), class: 'custom-link'%>
            </div>
        <% end %>
    <% end %>

    <div id="meetings">
      <% @meetings.each do |meeting| %>
        <div class = "card"  style="width: 500px;">
          <div class="card-body">
            <%= render meeting %>
            <p>
              <%= link_to "Show this meeting", meeting %>
              <%= link_to "Delete this meeting", meeting_path(meeting), method: :delete, data: { confirm: "Are you sure you want to delete this meeting?" }, class: 'btn btn-danger' %>

            </p>
          </div>
        </div>
        <hr/>
      <% end %>
    </div>

    <%= link_to "New meeting", new_meeting_path %>

  </div>

</body>
