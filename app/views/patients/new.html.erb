<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>New Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
</head>
<body>
  <div class="container">
    <div class="steps">
      <div class="page">
          <button type="button" class="btn btn-primary circular-button btn-blue">1</button>
          <%= button_to '2', @form.persisted? ? edit_2_form_path(@form) : edit_2_forms_path, method: :get, class: "btn btn-primary circular-button btn-outline-blue" %>   
         
          <%= button_to '3', @form.persisted? ? edit_3_form_path(@form) : edit_3_forms_path, method: :get, class: "btn btn-primary circular-button btn-outline-blue" %>
          
          <%= button_to '4', @form.persisted? ? edit_4_form_path(@form) : edit_4_forms_path, method: :get, class: "btn btn-primary circular-button btn-outline-blue" %>         

          <%= button_to '5', @form.persisted? ? edit_5_form_path(@form) : edit_5_forms_path, method: :get, class: "btn btn-primary circular-button btn-outline-blue" %>
          
          <%= button_to '6', @form.persisted? ? @form : show_error_forms_path, method: :get, class: "btn btn-primary circular-button btn-outline-blue" %>
        <!-- Steps bar content will go here -->
      </div>
    </div>
    <h1>New Form - Step 1</h1>
    
    <%= form_with(model: @form, local: true) do |form| %>
      <div class="row mb-3">
        <div class="col-4">
          <%= form.label :first_name, "Patient's First Name" %>
          <%= form.text_field :first_name, class: "form-control", id: "first_name" %>
        </div>

        <div class="col-4">
          <%= form.label :last_name, "Patient's Last Name" %>
          <%= form.text_field :last_name, class: "form-control", id: "last_name" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-4">
          <p>Gender</p>
          <div class="form-check form-check-inline">
            <%= form.radio_button :gender, "Male", class: "form-check-input", id: "male", checked: @form.gender == "Male" %>
            <%= form.label "male", class: "form-check-label", for: "male" do %>
              Male
            <% end %>
          </div>

          <div class="form-check form-check-inline">
            <%= form.radio_button :gender, "Female", class: "form-check-input", id: "female", checked: @form.gender == "Female" %>
            <%= form.label "female", class: "form-check-label", for: "female" do %>
              Female
            <% end %>
          </div>
        </div>
      </div>

    <div class="row mb-3">
        <div class="col-4">
          <%= form.label :date_of_birth, "Date of Birth" %>
          <%= form.date_field :date_of_birth, class: "form-control", id: "date_of_birth" %>
        </div>
    </div>

      <div class="row mb-3">
        <div class="col-8">
          <%= form.label :address, "Address" %>
          <%= form.text_field :address, class: "form-control", id: "address" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-8">
          <fieldset>
            <p>Relationship to Account Holder</p>

            <div class="form-check form-check-inline">
              <%= form.radio_button :relationship, "Direct Family member", class: "form-check-input", id: "family", checked: @form.relationship == "Direct Family member" %>
              <%= form.label "family", class: "form-check-label", for: "family" do %>
                Direct Family member
              <% end %>
            </div>

            <div class="form-check form-check-inline">
              <%= form.radio_button :relationship, "Relative", class: "form-check-input", id: "relative", checked: @form.relationship == "Relative" %>
              <%= form.label "relative", class: "form-check-label", for: "relative" do %>
                Relative
              <% end %>
            </div>

            <div class="form-check form-check-inline">
              <%= form.radio_button :relationship, "Employer - Domestic Helper", class: "form-check-input", id: "employer", checked: @form.relationship == "Employer - Domestic Helper" %>
              <%= form.label "employer", class: "form-check-label", for: "employer" do %>
                Employer - Domestic Helper
              <% end %>
            </div>

            <div class="form-check form-check-inline">
              <%= form.radio_button :relationship, nil, class: "form-check-input", id: "others", checked: @form.relationship == "Others" %>
              <%= form.label "others", class: "form-check-label", for: "others" do %>
                Others:
              <% end %>
            </div>
            <div class="form-check form-check-inline">
              <%= form.text_field :others_text, class: "form-control", id: "others_text", placeholder: "Please Fill", style: "font-style: italic; width: 150px;" %>
            </div>
          </fieldset>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-8">
          <%= form.label :hobbies, "Hobbies and Pastime" %><br>
          <%= form.text_area :hobbies, class: "form-control", id: "hobbies", style: "width: 50%; height: 100px; text-align: left;" %>
        </div>
      </div>
        <%= link_to "Back", forms_path, class: "btn btn-lg btn-outline-black rounded-pill", style: 'float: left; margin-right: 5px;' %>
        <%= form.submit "Save", name: "commit", value: "Save", class: "btn btn-lg rounded-pill btn-green me-2", style: 'float: left; margin-right: 5px;'  %>
        <%= form.submit "Next", name: 'commit', value: 'Next', class:"btn btn-lg btn-blue rounded-pill", style: 'float: left; margin-right: 5px;' %>
    <% end %>
  </div>

  <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity: "sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin: "anonymous" %>
</body>
</html>