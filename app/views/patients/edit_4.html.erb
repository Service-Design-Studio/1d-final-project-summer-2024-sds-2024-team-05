<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ninkatec Onboarding | Edit Video Analysis</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Application CSS -->
  <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
  <style>
    .video-container video {
      max-width: 300px;
      max-height: 180px;
      width: 100%;
      height: auto;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Steps Bar -->
    <div class="steps">
      <div class="page">
        <!-- Adjusted steps with Bootstrap styling -->
        <p class="numbers-not-active">1</p>
        <p class="dash">---</p>
        <p class="numbers-not-active">2</p>
        <p class="dash">---</p>
        <p class="numbers-not-active">3</p>
        <p class="dash">---</p>
        <p class="numbers-active">4</p>
        <p class="dash">---</p>
        <p class="numbers-not-active">5</p>
        <p class="dash">---</p>
        <p class="numbers-not-active">6</p>
      </div>
    </div>

    <!-- Title -->
    <h1 class="mt-3 mb-5">Video Analysis</h1>

    <!-- Video Upload Section -->
    <div class="row">
      <!-- Step 1: Physical Video -->
      <div class="col-md-6">
        <div class="box g-5 mb-4">
          <h3>Step 1</h3>
          <hr/>
          <h4>Upload Physical Video</h4>
          <%= form_with(model: @form, url: edit_4_form_path(@form), method: :patch, local: true, html: { multipart: true, id: 'physicalVideoUploadForm' }) do |form| %>
            <%= form.file_field :physical_video, accept: 'video/*', class: 'form-control mb-3', id: 'physicalVideoInput' %>
            <%= form.submit 'Upload', class: 'btn btn-primary' %>
          <% end %>
          <% if @form.physical_video.attached? %>
            <div class="video-container text-center mt-3">
              <p>Physical Video Uploaded:</p>
              <%= video_tag url_for(@form.physical_video), controls: true, class: "img-thumbnail" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Step 2: Mental Video -->
      <div class="col-md-6">
        <div class="box g-5 mb-4">
          <h3>Step 2</h3>
          <hr/>
          <h4>Upload Mental Video</h4>
          <%= form_with(model: @form, url: edit_4_form_path(@form), method: :patch, local: true, html: { multipart: true, id: 'mentalVideoUploadForm' }) do |form| %>
            <%= form.file_field :mental_video, accept: 'video/*', class: 'form-control mb-3', id: 'mentalVideoInput' %>
            <%= form.submit 'Upload', class: 'btn btn-primary' %>
          <% end %>
          <% if @form.mental_video.attached? %>
            <div class="video-container text-center mt-3">
              <p>Mental Video Uploaded:</p>
              <%= video_tag url_for(@form.mental_video), controls: true, class: "img-thumbnail" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="d-flex justify-content-center mt-5">
      <%= link_to "Back", edit_3_form_path(@form), class: "btn btn-secondary me-2" %>
      <%= form_with(model: @form, url: edit_4_form_path(@form), method: :patch, local: true) do |form| %>
        <%= form.submit "Next", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
