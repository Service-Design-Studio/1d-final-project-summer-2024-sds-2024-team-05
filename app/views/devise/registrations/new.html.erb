<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :user_first_name %><br />
    <%= f.text_field :user_first_name, autocomplete: "user-first-name" %>
  </div>

  <div class="field">
    <%= f.label :user_last_name %><br />
    <%= f.text_field :user_last_name, autocomplete: "user-last-name" %>
  </div>

  <div class="field">
    <%= f.label :user_contact_number %><br />
    <%= f.text_field :user_contact_number, autocomplete: "user-contact-no" %>
  </div>

  <div class="field">
    <%= f.label :user_address %><br />
    <%= f.text_field :user_address, autocomplete: "user-address" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
