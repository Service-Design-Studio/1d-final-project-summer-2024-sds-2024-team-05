<p style="color: green"><%= notice %></p>

<h1>Meetings</h1>

<%= month_calendar(events: @meetings) do |date, meetings| %>
  <div class="day">
    <%= date.day %>
  </div>
  <% meetings.each do |meeting| %>
    <div>
      <%= meeting.title %>
    </div>
  <% end %>
<% end %>

<div id="meetings">
  <% @meetings.each do |meeting| %>
    <%= render meeting %>
    <p>
      <%= link_to "Show this meeting", meeting %>
    </p>
  <% end %>
</div>

<%= link_to "New meeting", new_meeting_path %>
