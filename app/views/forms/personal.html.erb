<!doctype html>
<html lang="en">
<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Ninkatec Onboarding | Form 1</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
          <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    </head>
    <body>
        <div class = "container">
            <div class="steps">
                <div class="page">
                    <p class="numbers-active">1</p>
                    <p class="dash">---</p>
                    <p class="numbers-not-active">2</p>
                    <p class="dash">---</p>
                    <p class="numbers-not-active">3</p>
                    <p class="dash">---</p>
                    <p class="numbers-not-active">4</p>
                    <p class="dash">---</p>
                    <p class="numbers-not-active">5</p>
                    <p class="dash">---</p>
                    <p class="numbers-not-active">6</p>
                </div>
            </div>

            <h1>Personal Information</h1>
            <div class="row d-flex justify-content-left">
                <div class="col-4 mb-0">
                    <form>
                        <label for="first_name">Patient's First Name</label>
                        <input type="text" id="first_name" name="first_name" placeholder="John" class='form-control' style="width: 100%; text-align: left">
                    </form>
                </div>

                <div class="col-4 mb-0">
                    <form>
                        <label for="last_name">Patient's Last Name</label>
                        <input type="text" id="last_name" name="last_name" placeholder="Tan" class='form-control' style="width: 100%; text-align: left">
                    </form>
                </div>
            </div>

            <div class="row justify-content-left mt-4">
                <div class="col-4">
                    <p style = "margin: 0; padding: 0;">Gender</p>
                    <form>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="male" name="gender" value="Male">
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="female" name="gender" value="Female">
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                    </form>
                </div>
            </div>

            <div class="row d-flex justify-content-center mt-4">
                <form>
                    <label for="dateofbirth">Date of birth</label>
                    <input id="dateofbirth" class="form-control" type="date" style="width: 200px;"/>
                </form>
            </div>

            <div class="row d-flex justify-content-left mt-4">
                <form>
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" class='form-control' style="width: 100%; text-align: left">
                </form>
            </div>

            <div class="row d-flex justify-content-left mt-4">
                <div class="col-sm-12">
                    <form>
                        <fieldset>
                            <p>Relationship to Account Holder</p>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="family" name="relationship" value="Direct Family member">
                                <label class="form-check-label" for="family">Direct Family member</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="relative" name="relationship" value="Relative">
                                <label class="form-check-label" for="relative">Relative</label>
                            </div>
                            <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="employer" name="relationship" value="Employer - Domestic Helper">
                            <label class="form-check-label" for="employer">Employer - Domestic Helper</label>
                            </div>
                            <div class="form-group form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="others" name="relationship" value="Others">
                                <label class="form-check-label" for="others">Others:</label>
                                <input type="text" id="others" name="others" placeholder="Please Fill" style="font-style:italic">
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>

            <div class="row d-flex justify-content-left mt-4">
                <form>
                    <label for="hobbies">Hobbies and Pastime</label><br>
                    <input type="text" id="hobbies" name="hobbies" class='form-control' style="width: 50%; height: 100px; text-align: left;">
                </form>
            </div>
            <%= link_to "Save", "#", class: "btn btn-outline-save rounded-pill my-4", style: 'float: left; margin-right: 5px;'%>
            <%= link_to "Continue", "/forms/med_cond", class: "btn btn-outline-blue rounded-pill my-4", style: 'float: left;' %>
        </div>
    </body>
</html>