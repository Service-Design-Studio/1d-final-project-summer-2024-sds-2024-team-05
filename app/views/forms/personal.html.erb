<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ninkatec</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .input-group-text {
            border-left: none;
        }
        .form-control {
            border-right: none;
        }
        .form-control:focus {
            box-shadow: none;
        }
    </style>
    <script>
        function toggleOthersInput() {
            var othersCheckbox = document.getElementById("others");
            var othersInput = document.getElementById("otherstextbox");
            othersInput.disabled = !othersCheckbox.checked;
        }
    </script>
</head>
<body>
    <div class="container">
        <h1 class="text-left mt-4">Personal Information</h1>
        <form action="/save_form" method="post" enctype="multipart/form-data">
            <div class="row d-flex justify-content-left">
                <div class="col-sm-2">
                    <label for="first_name">Patient's First Name</label><br>
                    <input type="text" id="first_name" name="first_name" placeholder="John" class='form-control' style="width: 100%; text-align: left">
                </div>
                <div class="col-sm-2">
                    <label for="last_name">Patient's Last Name</label><br>
                    <input type="text" id="last_name" name="last_name" placeholder="Tan" class='form-control' style="width: 100%; text-align: left">
                </div>
            </div>
            <br>
            <div class="row d-flex justify-content-left mt-1">
                <div class="col-sm-2">
                    <p>Gender</p>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="male" name="gender" value="Male">
                        <label class="form-check-label" for="male">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="female" name="gender" value="Female">
                        <label class="form-check-label" for="female">Female</label>
                    </div>
                </div>
            </div>

            <div class="row d-flex justify-content-left mt-4">
                <div class="col-sm-2">
                    <label for="dateofbirth">Date of birth</label>
                    <input id="dateofbirth" name="dateofbirth" class="form-control" type="date" style="width: 200px;"/>
                </div>
            </div>

            <div class="row d-flex justify-content-left mt-4">
                <div class="col-sm-4">
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" class='form-control' style="width: 100%; text-align: left">
                </div>
            </div>

            <div class="row d-flex justify-content-left mt-4">
                <div class="col-sm-12">
                    <fieldset>
                        <p>Relationship to Account Holder</p>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="family" name="relationship" value="Direct Family member">
                            <label class="form-check-label" for="family">Direct Family member</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="relative" name="relationship" value="Relative">
                            <label class="form-check-label" for="relative">Relative</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="employer" name="relationship" value="Employer - Domestic Helper">
                            <label class="form-check-label" for="employer">Employer - Domestic Helper</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="others" name="relationship" value="Others" onclick="toggleOthersInput()">
                            <label class="form-check-label" for="others">Others:</label>
                        </div>
                        <div class="form-check form-check-inline" style="margin-left: -20px;">
                            <input type="text" id="otherstextbox" name="other_relationship" placeholder="Please Fill" style="font-style:italic;" class='form-control' disabled>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="row d-flex justify-content-left mt-4">
                <div class="col-sm-6">
                    <label for="hobbies">Hobbies and Pastime</label><br>
                    <input type="text" id="hobbies" name="hobbies" class='form-control' style="width: 100%; height: 100px; text-align: left;">
                </div>
            </div>

            <div class="container">
                <div class="row mt-5">
                    <div class="col-xs-12">
                        <div class="text-center">
                            <div>
                                <a href="/services/welcomenew" class="btn btn-outline-secondary rounded-pill" style='float: left; margin-right: 5px;'>Back</a>
                                <button type="submit" class="btn btn-outline-success rounded-pill" style='float: left; margin-right: 5px;'>Save</button>
                                <a href="/forms/med_cond" class="btn btn-outline-primary rounded-pill" style='float: left;'>Continue</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
