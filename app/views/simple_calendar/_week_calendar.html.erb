<div class="simple-calendar">
  <div class="calendar-heading">
    <span class="calendar-title">
      <h3>
        <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></time>
      </h3>
      <%= t('simple_calendar.week', default: 'Week') %>
      <%= calendar.week_number %>
      <% if calendar.number_of_weeks > 1 %>
        - <%= calendar.end_week %>
      <% end %>
    </span>

    <nav>
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
      <%= link_to t('simple_calendar.today', default: 'Today'), calendar.url_for_today_view %>
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
    </nav>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <td style="width: 150px; /* Adjust width as needed */">
              <% @meeting.hours.each do |hour| %>
                <div style="font-size: 10px;">
                  <%= hour %>
                  <% if !@attached_meetings.nil? %>
                    <% @attached_meetings.each do |meeting| %>

                      <% if meeting.parsed_start_time == hour && meeting.start_time.to_date == day %>
                        <div style="float: inline-end;">
                          <%= link_to "#{meeting.title} #{meeting.condensed_time}", meeting_path(meeting), class: 'btn btn-green rounded-pill', style: 'font-size: 10px;'%>
                        </div>
                        
                      <% end %>
                    <% end %>
                  <% else %>
                    <% @meetings.each do |meeting| %>

                      <% if meeting.parsed_start_time == hour && meeting.start_time.to_date == day %>
                        <div style="float: inline-end;">
                          <div class="event-dot" data-meeting-title="<%= meeting.title %>" data-meeting-path="<%= meeting_path(meeting) %>"></div>
                        </div>
                        
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
                <hr/> 
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function() {
    $('.event-dot').click(function() {
      var meetingPath = $(this).data('meeting-path');
      window.location.href = meetingPath;
    });
  });
</script>
