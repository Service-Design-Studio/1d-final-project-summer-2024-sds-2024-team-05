<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 600px;
            margin-top: 2em;
        }
        .header-container {
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-container">
            <% if current_user.admin? %>
                <%= link_to admin_root_path, class: "btn" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0"/>
                    </svg>
                <% end %>
            <% else %>
                <%= link_to user_root_path, class: "btn" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0"/>
                    </svg>
                <% end %>
            <% end %>
                
            <h2 style = "margin-left: 1em">Edit <%= resource_name.to_s.humanize %></h2>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-4" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
                <%= f.label :email do %>
                    Email <span style="color: red;">*</span> 
                <% end %>
                <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="mb-3">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="mb-3">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
                <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                    <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
                <% end %>
            </div>

            <div class="mb-3">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="mb-3">
                <%= f.label :current_password do %> 
                        Current Password <span style="color: red;">*</span> <i>(we need your current password to confirm your changes)</i>
                <% end %>
                <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password", required: true%>
            </div>

            <div class="mb-3">
                <%= f.label :user_first_name do %>
                    User First Name <span style="color: red;">*</span>
                <% end %>
                <%= f.text_field :user_first_name, class: "form-control", autocomplete: "user-first-name", value: resource.user_first_name %>
            </div>

            <div class="mb-3">
                <%= f.label :user_last_name do %>
                    User Last Name <span style="color: red;">*</span>
                <% end %>
                <%= f.text_field :user_last_name, class: "form-control", autocomplete: "user-last-name", value: resource.user_last_name %>
            </div>

            <div class="mb-3">
                <%= f.label :user_contact_number do %>
                    User Contact No. <span style="color: red;">*</span>
                <% end %>
                <%= f.text_field :user_contact_number, class: "form-control", autocomplete: "user-contact-no", value: resource.user_contact_number %>
            </div>

            <div class="mb-3">
                <%= f.label :user_address do %>
                    User Address <span style="color: red;">*</span>
                <% end %>
                <%= f.text_field :user_address, class: "form-control", autocomplete: "user-address", value: resource.user_address %>
            </div>

            <div class="mb-3">
                <%= f.label :user_postal do %>
                    User Postal Code <span style="color: red;">*</span>
                <% end %>
                <%= f.number_field :user_postal, class: "form-control", autocomplete: "user-postal", value: resource.user_postal %>
            </div>

            <div class="d-grid gap-2">
                <%= f.submit "Update", class: "btn btn-primary" %>
            </div>
        <% end %>

        <hr/>

        <h3 class="text-center mt-4">Cancel my account</h3>
        <div class="text-center">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger mb-4" %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
