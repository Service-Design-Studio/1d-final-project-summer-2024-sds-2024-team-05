<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .custom-padding {
          padding: 100px; /* Adjust this value as needed */
        }
      </style>
  </head>
  <body>
    <div class="container text-center py-2">
        <div class = "col-4 text-start">
        <h2>Our services</h2>
        </div>
        <div class="row justify-content-end">
          <div class="col-4 text-end">
            <p style ="margin-bottom:0px;">Already have an account?</p>
            <%= link_to "Sign In", "/services/login", class: "btn btn-outline-primary rounded-pill", style: 'width: 100px;' %>
          </div>
        </div>
        <br>

        <div class="row">
          <div class="col">
            <button type="button" class="btn btn-outline-primary custom-padding">Transitional Care</button>
          </div>
          <div class="col">
            <button type="button" class="btn btn-outline-primary custom-padding">Palliative Care</button>
          </div>
          <div class="col">
            <button type="button" class="btn btn-outline-primary  custom-padding">Nursing Care</button>
          </div>
        </div>

        <div class="text-start mt-5">
          <p>Interested in Our Care? Click below to</p>
          <div class='row form-container'>
          <div class='col-4'>
            <%= link_to "Sign Up", "/services/signup", class: "btn btn-outline-primary rounded-pill", style: 'float: left;' %>

          </div>
        </div>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>