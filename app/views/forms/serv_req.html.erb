<!DOCTYPE html>
<html lang="en">
<head>
  <title>Ninkatec</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .input-group-text {
      border-left: none;
    }
    .form-control {
      border-right: none;
    }
    .form-control:focus {
      box-shadow: none;
    }
  </style>
  <script>
    function toggleOthersInput() {
        var othersCheckbox = document.getElementById("othersCheckbox");
        var othersInput = document.getElementById("others");
        othersInput.disabled = !othersCheckbox.checked;
      }
    function validateYear(input) {
      input.addEventListener('input', function() {
        const dateParts = this.value.split('-');
        if (dateParts[0].length > 4) {
          dateParts[0] = dateParts[0].slice(0, 4);
          this.value = dateParts.join('-');
        }
      });
    }

    window.onload = function() {
      validateYear(document.getElementById('startDate'));
      validateYear(document.getElementById('endDate'));
    };
  </script>
</head>
<body>

<div class="container">
  <h1>Service Information</h1>     
  <form action="/action_page.php" method="post" enctype="multipart/form-data">
    <div class="row">
      <div class="col-sm-12">
        <br>
        <p>Services Requested</p>
        <input type="checkbox" id="showering" name="serv_req" value="Showering">
        <label for="showering">Showering</label>
        <input type="checkbox" id="toileting" name="serv_req" value="Toileting">
        <label for="toileting">Toileting</label>
        <input type="checkbox" id="companionship" name="serv_req" value="Companionship">
        <label for="companionship">Companionship</label>
        <input type="checkbox" id="othersCheckbox" name="med_cond" value="Others" onclick="toggleOthersInput()">
        <label for="othersCheckbox">Others</label><br><br>

        <label for="others">Others:</label>
        <br>
        <input type="text" id="others" name="others" placeholder="Please Fill" style="font-style:italic;height:100px;width:500px" class='form-control' disabled>
      </div>
    
      <div class="col-sm-6">
        <br>
        <p>Services Requested Start Date</p>
        <input id="startDate" name="start_date" class="form-control" type="date" style="width: 200px;"/>
        <br>
        <p>Service Requested End Date</p>
        <input id="endDate" name="end_date" class="form-control" type="date" style="width: 200px;"/>
        <br>
        <br>
      </div>
    </div>

    <div class="container">
      <div class="row mt-5">
        <div class="col-xs-12">
          <div class="text-center">
            <div>
              <a href="/forms/med_cond" class="btn btn-outline-secondary rounded-pill" style='float: left; margin-right: 5px;'>Back</a>
              <button type="submit" class="btn btn-outline-success rounded-pill" style='float: left; margin-right: 5px;'>Save</button>
              <a href="/videos/new" class="btn btn-outline-primary rounded-pill" style='float: left;'>Continue</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
</body>
</html>
