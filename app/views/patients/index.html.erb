<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Forms</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
</head>
<body>
  <div class="container">
    <h1 class="card-text"><%= "#{'Welcome'} #{@user.user_first_name} #{'!'}" %></h1>
    <h1>Ongoing Forms</h1>
    
    <!-- Table of forms -->
    <table class="table">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Start Date</th>
          <th class="text-center">Summary</th>

          <th class="text-center">Submitted?</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @forms.each do |form| %>
          <tr>
            <td><%= form.first_name %></td>
            <td><%= form.last_name %></td>
            <td><%= form.start_date %></td>
            <td class="text-center"><%= link_to 'View Summary', form_path(form), class: 'btn btn-info' %></td>
            <td class="text-center">
          <div class="d-flex justify-content-center align-items-center">
            <% if form.submitted? %>
              <span class="text-success fw-bold">Submitted</span>

            <% end %>
          </td>
          </div>
          <td class="text-center">
        <div class="d-flex justify-content-center align-items-center">
          <%= link_to 'Edit', edit_1_form_path(form), class: 'btn btn-primary me-2' %>
          <% unless form.submitted %>
            <%= form_with(model: form, method: :delete, url: form_path(form), data: { confirm: 'Are you sure?' }) do |f| %>
              <%= f.submit 'Delete', class: 'btn btn-danger' %>
            <% end %>
          <% end %>
        </div>
            
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <!-- Link to new form creation page -->
    <%= link_to 'Create New Form', new_form_path, class: 'btn btn-primary' %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>